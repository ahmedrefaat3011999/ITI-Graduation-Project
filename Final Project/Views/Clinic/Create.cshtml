@model Final_Project.Models.DomainModels.Clinic

@{
    ViewData["Title"] = "Create";
}

<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />


<div class="container">

    <div class="row d-flex align-items-center justify-content-center">

        <div class="col-10 d-flex align-items-center justify-content-center">

          
            <div class="bg-light rounded h-100 p-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @{
                        // if (@ViewBag.CreatedClinic != null)
                        if (TempData["NewDeptID"] != null)
                        {

                            <div class="alert alert-success" role="alert">
                                <!-- Clinic ViewBag.CreatedClinic.Name  was added successfully.. -->
                                Clinic @TempData["NewDeptID"] is Created Successfully .....
                            </div>
                            //TempData.Keep();
                        }
                    }
                    <div class="row g-2">
                        <div class="form-group ">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control border-0" placeholder="Email_Clinic" style="height: 55px;">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control border-0" placeholder="Name_Clinic" style="height: 55px;">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="Country" class="control-label"></label>
                            <input asp-for="Country" class="form-control border-0" placeholder="Clinic_Country" style="height: 55px;">
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                               <div class="form-group ">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control border-0" placeholder="Clinic_City" style="height: 55px;">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="Region" class="control-label"></label>
                            <input asp-for="Region" class="form-control border-0" placeholder="Clinic_Region" style="height: 55px;">
                            <span asp-validation-for="Region" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneClinic" class="control-label"></label>
                            <input asp-for="PhoneClinic" class="form-control DiasbledOldDate" />
                            <span asp-validation-for="PhoneClinic" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" class="form-control DiasbledOldDate" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" class="form-control DiasbledOldDate" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-5 m-auto mt-2">
                            <input class="btn btn-primary w-100 py-3" type="submit" value="Save">
                        </div>
                    </div>
                </form>


            </div>
       
       
       </div>

    </div>

</div>

<div>
    @* <a asp-action="/Home/Index">Back to List</a> *@
    <a asp-controller="Clinic" asp-action="Index">Clinic Informations</a>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
